pipeline {
    agent  {
        label 'appdev-macOS-dev'
    }
    options {
        disableConcurrentBuilds()
        timeout(time: 180, unit: 'MINUTES')
    }
    triggers {
        pollSCM('H/15 * * * *')
    }
    parameters {
        string(defaultValue: 'develop', description: 'branch to build', name: 'branch')
    }
    environment {
        LANG = "en_US.UTF-8"
        LANGUAGE = "en_US.UTF-8"
        LC_ALL = "en_US.UTF-8"
        LC_CTYPE = "en_US.UTF-8"

        PATH = "$PATH:/usr/local/bin"

        JENKINS_ENV = "prod"
        JENKINS_URL = "https://jenkins-cicd.cardinalhealth.net:8443/jenkins/job/OE_Plus_Mobile/job/oe-plus-ios-debug/${BUILD_NUMBER}"

        PROJECT_NAME = "oe-plus-ios"
        DEBUG_APP_NAME = "order-express-plus-signed-debug.ipa"
        RELEASE_APP_NAME = "order-express-plus-signed-release.ipa"

        NEXUS_PROJECT_PATH = "http://ldil0219apbld15.cardinalhealth.net:9081/nexus/content/repositories/oe-mobile-plus"
        NEXUS_DEBUG_APP_PATH = "${NEXUS_PROJECT_PATH}/${JENKINS_ENV}/${PROJECT_NAME}/debug/${BUILD_NUMBER}/${DEBUG_APP_NAME}"

        XCODE_VERSION = "11.3.1"
        XCODE_PATH = "/Applications/Xcode.app"

        BUILD_TYPE_DEBUG = "DEBUG"
    }
    stages {
        stage('Increment Build Number') {
            steps {
                sh "fastlane ios incrementBuildNumber"
            }
        }
        stage('Clean Artefacts') {
            steps {
                sh "fastlane ios clearMetricsDerivedData"
            }
        }
        stage('Notify the team') {
            steps {
                sh "fastlane ios notifyBuildStarted"
            }
        }
        stage('Build, Tests & Metrics') {
            steps {
                sh "fastlane ios metrics"
            }
        }
        stage('Sonarqube Scan') {
            steps {
                sh "fastlane ios sonarqubeDebugScan"
                /*
                sh "fastlane ios sonarqubeStatusCheck"
                */
            }
        }
        stage('Run Journey tests') {
            steps {
                sh "fastlane ios buildAndRunUserJourneyTests"
            }
        }
        stage('Sonarqube code-smell check') {
            steps {
              sh "fastlane ios sonarqubeCodeSmellsStatusCheck"
            }
        }
        stage('Build & Codesigning Debug ipa') {
            steps {
                sh "./unlockKeychain.sh"
                sh "fastlane ios buildDebug"
            }
        }
        stage('Upload Debug IPA to Test Flight') {
            steps {
                sh "fastlane ios uploadDebugToTestFlight"
            }
        }
        stage('Initiate .dSYM upload') {
            steps {
                sh "fastlane ios store_testflight_version_and_build_number"
                build job: 'oe-plus-ios-dsym-upload-debug', propagate: false, quietPeriod: 1800, wait: false
            }
        }
    }
    post {
        success {
            sh "fastlane ios notifyDebugBuildSuccess"
        }
        failure {
            sh "fastlane ios notifyDebugBuildFailure"
        }
    }
}
